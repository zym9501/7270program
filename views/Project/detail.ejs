<script>
    function btn1clicked(elem) {

        elem.style = 'background-color: red';
        // elem.class = "btn btn-danger";
        elem.innerHTML = "move-out";
    }

    async function cancelRental(id) {

        var r = confirm("Confirm move?");

        if (r) {

            var response = await fetch("/user/<%= req.session.userId%>/own/remove/<%= details.id%>" + id, {
                method: "POST",
                credentials: 'same-origin',
            });

            // var html = await response.text();
            // alert(html);
            if (response.ok) {
                var data = await response.json();
                alert(data.message);
                window.location = data.url;
            } else {
                alert(response.status + ": " + response.statusText);
            }

        } else {
            alert("cancelled");
        }

    };


    async function corentRental(id) {

        var r = confirm("Confirm CoRent?");

        if (r) {

            var response = await fetch("/user/<%= req.session.userId%>/own/add/<%= details.id%>" + id, {
                method: "POST",
                credentials: 'same-origin',
            });

            // var html = await response.text();
            // alert(html);
            if (response.ok) {
                var data = await response.json();
                alert(data.message);
                window.location = data.url;
            } else {
                alert(response.status + ": " + response.statusText);
            }

        } else {
            alert("cancelled");
        }

    };

</script>